{%- liquid
  assign product = product | default: product_obj
  assign selected_variant = selected_variant | default: product.selected_or_first_available_variant
  assign section_id = section.id | default: 'product-form'
-%}

{%- if product != blank -%}
  {%- assign form_id = 'product-form-' | append: section_id -%}
  {%- form 'product', product, class: 'product-form', id: form_id, data-product-id: product.id, data-section-id: section_id -%}
    {%- unless product.has_only_default_variant -%}
      <div class="product-form__variants">
        {%- for option in product.options_with_values -%}
          <div class="product-form__option">
            <label class="product-form__option-label" for="Option-{{ section_id }}-{{ forloop.index0 }}">
              {{ option.name }}:
              <span class="product-form__option-selected" data-option-selected="{{ forloop.index0 }}">{{ option.selected_value | default: option.values.first }}</span>
            </label>
            <div class="product-form__option-values">
              {%- for value in option.values -%}
                {%- liquid
                  assign option_disabled = false
                  for variant in product.variants
                    if variant.available == false
                      assign variant_option_values = variant.options
                      assign option_index = forloop.parentloop.parentloop.index0
                      if variant_option_values[option_index] == value
                        assign option_disabled = true
                        break
                      endif
                    endif
                  endfor
                -%}
                <input
                  type="radio"
                  id="Option-{{ section_id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}"
                  name="options[{{ option.name | escape }}]"
                  value="{{ value | escape }}"
                  {% if option.selected_value == value %}checked{% endif %}
                  {% if option_disabled %}disabled{% endif %}
                  data-option-index="{{ forloop.parentloop.index0 }}"
                  data-option-value="{{ value | escape }}"
                  class="product-form__option-input"
                  required
                >
                <label
                  for="Option-{{ section_id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}"
                  class="product-form__option-value {% if option_disabled %}product-form__option-value--disabled{% endif %}"
                  data-option-value-label="{{ value | escape }}"
                >
                  {{ value }}
                </label>
              {%- endfor -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endunless -%}
    
    <input type="hidden" name="id" value="{{ selected_variant.id }}" data-variant-id>

    <!-- Gift Message (Optional) -->
    {%- if section.settings.show_gift_message -%}
      <div class="product-form__gift-message">
        <label for="GiftMessage-{{ section_id }}" class="product-form__gift-message-label">
          {{ section.settings.gift_message_label | default: 'Is this a gift? Add a note! (optional)' }}
        </label>
        <textarea
          id="GiftMessage-{{ section_id }}"
          name="properties[Gift Message]"
          class="product-form__gift-message-input"
          rows="3"
          maxlength="500"
          placeholder="{{ section.settings.gift_message_placeholder | default: 'Enter your gift message here...' }}"
        ></textarea>
        <div class="product-form__gift-message-counter">
          <span class="product-form__gift-message-count" data-gift-message-count>0</span>
          <span>/ 500</span>
        </div>
      </div>
    {%- endif -%}

    <div class="product-form__quantity">
      <label for="Quantity-{{ section_id }}" class="product-form__quantity-label">Quantity:</label>
      <div class="product-form__quantity-input-wrapper">
        <button type="button" class="product-form__quantity-btn" data-quantity-decrease aria-label="Decrease quantity">-</button>
        <input
          type="number"
          id="Quantity-{{ section_id }}"
          name="quantity"
          value="1"
          min="1"
          {% if selected_variant.inventory_management != null and selected_variant.inventory_policy == 'deny' %}
            max="{{ selected_variant.inventory_quantity }}"
          {% endif %}
          class="product-form__quantity-input"
          data-quantity-input
          required
        >
        <button type="button" class="product-form__quantity-btn" data-quantity-increase aria-label="Increase quantity">+</button>
      </div>
    </div>

    <div class="product-form__buttons">
      <div class="product-form__primary-buttons">
        <button
          type="submit"
          name="add"
          class="product-form__submit btn-primary"
          {% if selected_variant.available == false %}disabled{% endif %}
          data-add-to-cart
        >
          <span data-add-to-cart-text>
            {%- if selected_variant.available -%}
              Add to Cart
            {%- else -%}
              Sold Out
            {%- endif -%}
          </span>
          <span class="product-form__submit-loading" data-add-to-cart-loading style="display: none;">
            <svg class="product-form__spinner" width="20" height="20" viewBox="0 0 20 20">
              <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2" fill="none" stroke-dasharray="50.27" stroke-dashoffset="50.27">
                <animate attributeName="stroke-dasharray" dur="1.5s" values="0 50.27;50.27 0;0 50.27" repeatCount="indefinite"/>
                <animate attributeName="stroke-dashoffset" dur="1.5s" values="0;-50.27;-100.54" repeatCount="indefinite"/>
              </circle>
            </svg>
            Adding...
          </span>
        </button>

        {%- if section.settings.show_wishlist_button -%}
          <button
            type="button"
            class="product-form__wishlist-btn"
            data-wishlist-button
            aria-label="Add to wishlist"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
          </button>
        {%- endif -%}
      </div>

      {%- if section.settings.enable_payment_button and selected_variant.available -%}
        <div class="product-form__payment-button" data-payment-button>
          {{ form | payment_button }}
        </div>
      {%- endif -%}
    </div>

    {%- if selected_variant.available == false -%}
      <p class="product-form__sold-out">This product is currently sold out.</p>
    {%- endif -%}
  {%- endform -%}
{%- endif -%}

<style>
  .product-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .product-form__variants {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .product-form__option {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .product-form__option-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .product-form__option-selected {
    font-weight: 400;
    text-transform: none;
    letter-spacing: normal;
    color: var(--color-text-secondary);
  }

  .product-form__option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .product-form__option-input {
    display: none;
  }

  .product-form__option-value {
    padding: 0.625rem 1.25rem;
    border: 2px solid var(--color-border-soft);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    font-weight: 500;
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
    user-select: none;
  }

  .product-form__option-input:checked + .product-form__option-value,
  .product-form__option-value:hover:not(.product-form__option-value--disabled) {
    border-color: var(--color-text-primary);
    background-color: var(--color-text-primary);
    color: var(--color-bg-elevated);
  }

  .product-form__option-value--disabled,
  .product-form__option-input:disabled + .product-form__option-value {
    opacity: 0.5;
    cursor: not-allowed;
    text-decoration: line-through;
  }

  .product-form__gift-message {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .product-form__gift-message-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-form__gift-message-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid var(--color-border-soft);
    border-radius: 0.5rem;
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--color-text-primary);
    background-color: var(--color-bg-elevated);
    resize: vertical;
    min-height: 80px;
    transition: border-color 0.3s ease;
  }

  .product-form__gift-message-input:focus {
    outline: none;
    border-color: var(--color-text-primary);
  }

  .product-form__gift-message-input::placeholder {
    color: var(--color-text-secondary);
  }

  .product-form__gift-message-counter {
    text-align: right;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .product-form__gift-message-count {
    font-weight: 600;
  }

  .product-form__quantity {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .product-form__quantity-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    min-width: fit-content;
  }

  .product-form__quantity-input-wrapper {
    display: flex;
    align-items: center;
    border: 2px solid var(--color-border-soft);
    border-radius: 0.5rem;
    overflow: hidden;
    width: fit-content;
  }

  .product-form__quantity-btn {
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .product-form__quantity-btn:hover:not(:disabled) {
    background-color: var(--color-bg-section-soft);
  }

  .product-form__quantity-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-form__quantity-input {
    width: 4rem;
    height: 2.5rem;
    border: none;
    border-left: 2px solid var(--color-border-soft);
    border-right: 2px solid var(--color-border-soft);
    text-align: center;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    background-color: var(--color-bg-elevated);
    -moz-appearance: textfield;
    padding: 0;
  }

  .product-form__quantity-input::-webkit-outer-spin-button,
  .product-form__quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .product-form__quantity-input:focus {
    outline: none;
    border-left-color: var(--color-text-primary);
    border-right-color: var(--color-text-primary);
  }

  .product-form__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-form__primary-buttons {
    display: flex;
    gap: 0.75rem;
    align-items: stretch;
  }

  .product-form__submit {
    flex: 1;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    min-height: 3.5rem;
  }

  .product-form__wishlist-btn {
    width: 3.5rem;
    height: 3.5rem;
    padding: 0;
    border: 2px solid var(--color-border-soft);
    border-radius: 0.5rem;
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .product-form__wishlist-btn:hover {
    border-color: var(--color-text-primary);
    background-color: var(--color-text-primary);
    color: var(--color-bg-elevated);
  }

  .product-form__wishlist-btn[data-wishlist-active="true"] {
    border-color: var(--color-text-primary);
    background-color: var(--color-text-primary);
    color: var(--color-bg-elevated);
  }

  .product-form__wishlist-btn svg {
    width: 20px;
    height: 20px;
  }

  .product-form__submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-form__submit-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .product-form__spinner {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .product-form__payment-button {
    width: 100%;
  }

  .product-form__payment-button .shopify-payment-button {
    width: 100%;
  }

  .product-form__payment-button .shopify-payment-button__button {
    width: 100%;
    min-height: 3.5rem;
    border-radius: 9999px;
  }

  .product-form__payment-button .shopify-payment-button__button--unbranded {
    background-color: var(--color-text-primary);
    color: var(--color-bg-elevated);
    border: none;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-form__sold-out {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin-top: -1rem;
    font-style: italic;
  }
</style>
