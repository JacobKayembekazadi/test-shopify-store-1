<div class="quiz-banner section-spacing" id="quiz">
  <div class="container">
    <div class="quiz-banner__wrapper">
      <div class="quiz-banner__content">
        {%- if section.settings.eyebrow != blank -%}
          <div class="quiz-banner__eyebrow">
            <span class="quiz-banner__eyebrow-text">{{ section.settings.eyebrow }}</span>
          </div>
        {%- endif -%}

        <h3 class="quiz-banner__title">
          {{ section.settings.title | default: 'Confused by the noise? Let data decide.' }}
        </h3>

        {%- if section.settings.description != blank -%}
          <p class="quiz-banner__description">
            {{ section.settings.description }}
          </p>
        {%- endif -%}
      </div>

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link | default: '#quiz' }}" class="quiz-banner__button btn-primary">
          {{ section.settings.button_text }}
          <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 3l6 6-6 6"/>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .quiz-banner {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .quiz-banner__wrapper {
    background-color: var(--color-bg-section-dark);
    color: white;
    border-radius: 2rem;
    padding: 3rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    box-shadow: 0 30px 80px rgba(6, 8, 20, 0.4);
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .quiz-banner__wrapper {
      padding: 4rem;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .quiz-banner__wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle at center, rgba(21, 26, 40, 0.5) 0%, transparent 70%);
    opacity: 0.5;
    pointer-events: none;
  }

  .quiz-banner__content {
    position: relative;
    z-index: 10;
    max-width: 42rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .quiz-banner__eyebrow {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    background-color: var(--color-text-primary);
    border: 1px solid var(--color-border-strong);
    width: fit-content;
  }

  .quiz-banner__eyebrow-text {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--color-accent-lime);
    font-weight: 700;
  }

  .quiz-banner__title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 1.2;
    color: white;
  }

  @media screen and (min-width: 750px) {
    .quiz-banner__title {
      font-size: 3rem;
    }
  }

  .quiz-banner__title span {
    color: var(--color-text-secondary);
  }

  .quiz-banner__description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    max-width: 32rem;
    line-height: 1.6;
  }

  .quiz-banner__button {
    position: relative;
    z-index: 10;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .quiz-banner__button:hover {
    background-color: white;
    color: var(--color-text-primary);
  }

  .quiz-banner__button svg {
    transition: transform 0.3s ease;
  }

  .quiz-banner__button:hover svg {
    transform: translateX(4px);
  }
</style>

{% schema %}
{
  "name": "Quiz Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Smart Stack Matching"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Confused by the noise? Let data decide."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Answer 8 questions and we'll build your training plan and product stack for youâ€”no guesswork, no cluttered cart, just science."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Start 60s Quiz"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Quiz Banner"
    }
  ]
}
{% endschema %}

