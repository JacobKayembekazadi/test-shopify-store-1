<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <div class="footer__logo">
          <div class="footer__logo-dot"></div>
          <span class="footer__logo-text">{{ shop.name }}</span>
        </div>
        <p class="footer__tagline">{{ section.settings.tagline | default: 'Train Smarter. Shop Better. Perform Longer.' }}</p>
      </div>

      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          <div class="footer__column" {{ block.shopify_attributes }}>
            <h4 class="footer__heading">{{ block.settings.heading }}</h4>
            <ul class="footer__list">
              {%- for link in linklists[block.settings.menu].links -%}
                <li class="footer__list-item">
                  <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'sections.footer.copyright' | t }}
      </p>
      <div class="footer__legal">
        {%- if section.settings.show_policy_link -%}
          <a href="{{ shop.privacy_policy.url }}" class="footer__legal-link">{{ shop.privacy_policy.title }}</a>
        {%- endif -%}
        {%- if section.settings.show_terms_link -%}
          <a href="{{ shop.terms_of_service.url }}" class="footer__legal-link">{{ shop.terms_of_service.title }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-text-primary);
    color: var(--color-text-secondary);
    padding: 4rem 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    margin-bottom: 4rem;
  }

  @media screen and (min-width: 750px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr) repeat(2, 1fr);
    }
  }

  .footer__brand {
    grid-column: 1 / -1;
  }

  @media screen and (min-width: 750px) {
    .footer__brand {
      grid-column: 1 / 3;
    }
  }

  .footer__logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 1rem;
  }

  .footer__logo-dot {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    background-color: var(--color-accent-lime);
  }

  .footer__logo-text {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
    color: white;
  }

  .footer__tagline {
    font-size: 0.875rem;
    max-width: 18rem;
    color: var(--color-text-secondary);
  }

  .footer__heading {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  .footer__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__link:hover {
    color: white;
  }

  .footer__bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border-strong);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: space-between;
  }

  @media screen and (min-width: 750px) {
    .footer__bottom {
      flex-direction: row;
    }
  }

  .footer__copyright {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: 1.5rem;
  }

  .footer__legal-link {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__legal-link:hover {
    color: white;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Train Smarter. Shop Better. Perform Longer."
    },
    {
      "type": "checkbox",
      "id": "show_policy_link",
      "label": "Show privacy policy link",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_terms_link",
      "label": "Show terms of service link",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list",
        "settings": {
          "heading": "Shop"
        }
      },
      {
        "type": "link_list",
        "settings": {
          "heading": "Company"
        }
      }
    ]
  }
}
{% endschema %}

